<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="drawerArrowStyle">@style/Theme.MyTheme.DrawerArrowStyle</item>
        <item name="toolbarStyle">@style/Theme.MyTheme.Toolbar</item>
        <item name="pref_masterSwitchStyle">@style/Theme.MyTheme.MasterSwitchStyle</item>
    </style>

    <style name="Theme.MyTheme.MasterSwitchStyle" parent="@style/PreferenceMasterSwitch">
        <item name="pref_masterSwitchBackgroundOn">@color/preference_fallback_accent_color</item>
    </style>

    <style name="Theme.MyTheme.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.MyTheme.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="color">@android:color/white</item>
        <item name="titleTextAppearance">@style/Theme.MyTheme.Toolbar.TextAppearance</item>
        <item name="subtitleTextAppearance">@style/Theme.MyTheme.Toolbar.TextAppearance.Subtitle
        </item>
    </style>

    <style name="Theme.MyTheme.Toolbar.TextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.MyTheme.Toolbar.TextAppearance.Subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>

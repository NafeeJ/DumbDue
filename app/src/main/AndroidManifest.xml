<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kiwicorp.dumbdue">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <application
        android:name=".NotificationChannel"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ScheduleReminderActivity"
            android:theme="@style/SchedulingTheme"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".DatePickerActivity"
            android:theme="@style/SchedulingTheme" />
        <activity android:name=".EditReminderActivity"
            android:theme="@style/SchedulingTheme"/>
        <receiver android:name=".NotificationReceiver"/>
        <receiver android:name=".IntermediateReceiver"/>
    </application>

</manifest>
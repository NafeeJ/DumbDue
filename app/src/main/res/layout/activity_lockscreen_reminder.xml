<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <View
        android:id="@+id/centerLine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:autofillHints="true"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleEditText"
        android:layout_alignParentEnd="true"
        android:background="#303030"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/repeatTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTextView"
        android:background="#303030"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:textColor="#FFFFFF"
        tools:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quickAccessButton1"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repeatTextView"
        android:layout_toStartOf="@id/quickAccessButton2"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quickAccessButton2"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repeatTextView"
        android:layout_toStartOf="@id/centerLine"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quickAccessButton3"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repeatTextView"
        android:layout_toEndOf="@id/centerLine"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quickAccessButton4"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repeatTextView"
        android:layout_toEndOf="@id/quickAccessButton3"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/timeSetterButton1"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quickAccessButton1"
        android:layout_toStartOf="@id/timeSetterButton2"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/timeSetterButton2"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quickAccessButton1"
        android:layout_toStartOf="@id/centerLine"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/timeSetterButton3"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quickAccessButton1"
        android:layout_toEndOf="@id/centerLine"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/timeSetterButton4"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quickAccessButton1"
        android:layout_toEndOf="@id/timeSetterButton3"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/timeSetterButton5"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeSetterButton1"
        android:layout_toStartOf="@id/timeSetterButton6"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/timeSetterButton6"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeSetterButton3"
        android:layout_toStartOf="@id/centerLine"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/timeSetterButton7"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeSetterButton4"
        android:layout_toEndOf="@id/centerLine"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/timeSetterButton8"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeSetterButton4"
        android:layout_toEndOf="@id/timeSetterButton7"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/markDoneButton"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeSetterButton8"
        android:text="@string/mark_done"
        android:textSize="21sp"
        android:textAllCaps="false"
        android:background="#FFFFFF" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/plus1HrButton"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/markDoneButton"
        android:text="@string/plus_1_hr"
        android:textSize="21sp"
        android:textAllCaps="false"
        android:background="#FFFFFF" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/plus3HrButton"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plus1HrButton"
        android:text="@string/plus_3_hr"
        android:textSize="21sp"
        android:textAllCaps="false"
        android:background="#FFFFFF" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/plus1DayButton"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plus3HrButton"
        android:text="@string/plus_1_day"
        android:textSize="21sp"
        android:textAllCaps="false"
        android:background="#FFFFFF" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/debugTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plus1DayButton" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
     <data>
         <variable
             name="viewmodel"
             type="com.kiwicorp.dumbdue.ui.addeditreminder.AddEditReminderViewModel" />
     </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/repeat_off_text"
            style="@style/Widget.DumbDue.TextView.Menu"
            android:layout_marginTop="20dp"
            tools:text="Repeat Off" />

        <TextView
            android:id="@+id/repeat_daily_text"
            style="@style/Widget.DumbDue.TextView.Menu"
            tools:text="Repeat Daily" />

        <TextView
            android:id="@+id/repeat_weekdays_text"
            style="@style/Widget.DumbDue.TextView.Menu"
            tools:text="Repeat Weekdays" />

        <TextView
            android:id="@+id/repeat_weekly_text"
            style="@style/Widget.DumbDue.TextView.Menu"
            tools:text="Repeat Weekly" />

        <TextView
            android:id="@+id/repeat_monthly_text"
            style="@style/Widget.DumbDue.TextView.Menu"
            tools:text="Repeat Monthly" />

        <TextView
            android:id="@+id/repeat_yearly_text"
            style="@style/Widget.DumbDue.TextView.Menu"
            tools:text="Repeat Yearly" />

        <TextView
            android:id="@+id/repeat_custom_text"
            style="@style/Widget.DumbDue.TextView.Menu"
            android:layout_marginBottom="20dp"
            tools:text="Repeat Custom"/>
    </LinearLayout>

</layout>

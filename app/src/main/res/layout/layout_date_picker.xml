<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/dateTimeSetButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/calendarView"
        android:layout_below="@id/calendarView"
        android:text="OK" />

    <Button
        android:id="@+id/dateTimeCancelButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/dateTimeSetButton"
        android:layout_below="@id/calendarView"
        android:text="CANCEL" />

    <ImageButton
        android:id="@+id/timePickerImageButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_access_time_black_24dp"
        android:background="#FFFFFF"
        android:layout_alignStart="@id/calendarView"
        android:layout_below="@id/calendarView"/>


</RelativeLayout>
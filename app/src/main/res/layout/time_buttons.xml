<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.kiwicorp.dumbdue.ui.settings.PreferencesStorage"/>

        <variable
            name="preferencesStorage"
            type="com.kiwicorp.dumbdue.ui.settings.PreferencesStorage" />

        <variable
            name="onTimeSetButtonsClickImpl"
            type="com.kiwicorp.dumbdue.OnTimeSetButtonClick" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        xmlns:tool="http://schemas.android.com/tools">

        <Button
            android:id="@+id/quick_access_time_1"
            style="@style/TimeButtonStyle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/quick_access_time_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{() -> onTimeSetButtonsClickImpl.onQuickAccessTimeSetterClick(PreferencesStorage.PREFS_QUICK_ACCESS_1)}"
            android:text="@{preferencesStorage.getQuickAccessTimeSetter(PreferencesStorage.PREFS_QUICK_ACCESS_1).text}" />

        <Button
            android:id="@+id/quick_access_time_2"
            style="@style/TimeButtonStyle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/quick_access_time_3"
            app:layout_constraintStart_toEndOf="@+id/quick_access_time_1"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{() -> onTimeSetButtonsClickImpl.onQuickAccessTimeSetterClick(PreferencesStorage.PREFS_QUICK_ACCESS_2)}"
            android:text="@{preferencesStorage.getQuickAccessTimeSetter(PreferencesStorage.PREFS_QUICK_ACCESS_2).text}"/>

        <Button
            android:id="@+id/quick_access_time_3"
            style="@style/TimeButtonStyle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/quick_access_time_4"
            app:layout_constraintStart_toEndOf="@+id/quick_access_time_2"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{() -> onTimeSetButtonsClickImpl.onQuickAccessTimeSetterClick(PreferencesStorage.PREFS_QUICK_ACCESS_3)}"
            android:text="@{preferencesStorage.getQuickAccessTimeSetter(PreferencesStorage.PREFS_QUICK_ACCESS_3).text}"/>

        <Button
            android:id="@+id/quick_access_time_4"
            style="@style/TimeButtonStyle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/quick_access_time_3"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{() -> onTimeSetButtonsClickImpl.onQuickAccessTimeSetterClick(PreferencesStorage.PREFS_QUICK_ACCESS_4)}"
            android:text="@{preferencesStorage.getQuickAccessTimeSetter(PreferencesStorage.PREFS_QUICK_ACCESS_4).text}"/>

        <Button
            android:id="@+id/time_setter_1"
            style="@style/TimeButtonStyle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/time_setter_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quick_access_time_1"
            android:onClick="@{() -> onTimeSetButtonsClickImpl.onIncrementalTimeSetterClick(PreferencesStorage.PREFS_TIME_SETTER_1)}"
            android:text="@{preferencesStorage.getIncrementalTimeSetter(PreferencesStorage.PREFS_TIME_SETTER_1).text}"/>

        <Button
            android:id="@+id/time_setter_2"
            style="@style/TimeButtonStyle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/time_setter_3"
            app:layout_constraintStart_toEndOf="@+id/time_setter_1"
            app:layout_constraintTop_toBottomOf="@+id/quick_access_time_1"
            android:onClick="@{() -> onTimeSetButtonsClickImpl.onIncrementalTimeSetterClick(PreferencesStorage.PREFS_TIME_SETTER_2)}"
            android:text="@{preferencesStorage.getIncrementalTimeSetter(PreferencesStorage.PREFS_TIME_SETTER_2).text}"/>

        <Button
            android:id="@+id/time_setter_3"
            style="@style/TimeButtonStyle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/time_setter_4"
            app:layout_constraintStart_toEndOf="@+id/time_setter_2"
            app:layout_constraintTop_toBottomOf="@+id/quick_access_time_1"
            android:onClick="@{() -> onTimeSetButtonsClickImpl.onIncrementalTimeSetterClick(PreferencesStorage.PREFS_TIME_SETTER_3)}"
            android:text="@{preferencesStorage.getIncrementalTimeSetter(PreferencesStorage.PREFS_TIME_SETTER_3).text}"/>

        <Button
            android:id="@+id/time_setter_4"
            style="@style/TimeButtonStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/time_setter_3"
            app:layout_constraintTop_toBottomOf="@+id/quick_access_time_1"
            android:onClick="@{() -> onTimeSetButtonsClickImpl.onIncrementalTimeSetterClick(PreferencesStorage.PREFS_TIME_SETTER_4)}"
            android:text="@{preferencesStorage.getIncrementalTimeSetter(PreferencesStorage.PREFS_TIME_SETTER_4).text}"/>

        <Button
            android:id="@+id/time_setter_5"
            style="@style/TimeButtonStyle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/time_setter_6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time_setter_1"
            android:onClick="@{() -> onTimeSetButtonsClickImpl.onIncrementalTimeSetterClick(PreferencesStorage.PREFS_TIME_SETTER_5)}"
            android:text="@{preferencesStorage.getIncrementalTimeSetter(PreferencesStorage.PREFS_TIME_SETTER_5).text}"/>

        <Button
            android:id="@+id/time_setter_6"
            style="@style/TimeButtonStyle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/time_setter_7"
            app:layout_constraintStart_toEndOf="@+id/time_setter_5"
            app:layout_constraintTop_toBottomOf="@id/time_setter_1"
            android:onClick="@{() -> onTimeSetButtonsClickImpl.onIncrementalTimeSetterClick(PreferencesStorage.PREFS_TIME_SETTER_6)}"
            android:text="@{preferencesStorage.getIncrementalTimeSetter(PreferencesStorage.PREFS_TIME_SETTER_6).text}"/>

        <Button
            android:id="@+id/time_setter_7"
            style="@style/TimeButtonStyle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/time_setter_8"
            app:layout_constraintStart_toEndOf="@+id/time_setter_6"
            app:layout_constraintTop_toBottomOf="@id/time_setter_1"
            android:onClick="@{() -> onTimeSetButtonsClickImpl.onIncrementalTimeSetterClick(PreferencesStorage.PREFS_TIME_SETTER_7)}"
            android:text="@{preferencesStorage.getIncrementalTimeSetter(PreferencesStorage.PREFS_TIME_SETTER_7).text}"/>

        <Button
            android:id="@+id/time_setter_8"
            style="@style/TimeButtonStyle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/time_setter_7"
            app:layout_constraintTop_toBottomOf="@id/time_setter_1"
            android:onClick="@{() -> onTimeSetButtonsClickImpl.onIncrementalTimeSetterClick(PreferencesStorage.PREFS_TIME_SETTER_8)}"
            android:text="@{preferencesStorage.getIncrementalTimeSetter(PreferencesStorage.PREFS_TIME_SETTER_8).text}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

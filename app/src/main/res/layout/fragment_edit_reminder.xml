<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.kiwicorp.dumbdue.data.Reminder"/>

        <variable
            name="viewmodel"
            type="com.kiwicorp.dumbdue.ui.addeditreminder.AddEditReminderViewModel" />
    </data>

    <!-- Layout must be wrapped in a coordinator layout for showing snackbars. -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.addeditreminder.AddReminderFragment"
            android:background="@android:color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="true"
                app:fontFamily="@font/open_sans_bold"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textSize="32sp"
                android:text="@={viewmodel.title}"
                android:textColor="#FFFFFF"
                android:background="#000000"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Title"/>

            <TextView
                android:id="@+id/date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/calendar_white"
                android:drawablePadding="10dp"
                app:layout_constraintTop_toBottomOf="@id/title_text"
                android:layout_alignParentEnd="true"
                android:padding="14sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"
                app:timeFromNow="@{viewmodel.calendar}"
                android:onClick="@{()->viewmodel.onOpenTimePicker()}"
                tools:text="Fri, May 29, 10:05 AM in 4 Hours"/>

            <TextView
                android:id="@+id/repeat_text"
                android:drawableStart="@drawable/repeat_white"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/date_text"
                android:paddingHorizontal="14dp"
                android:paddingBottom="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"
                android:onClick="@{()->viewmodel.onOpenRepeatMenu()}"
                app:calendar="@{viewmodel.calendar}"
                app:repeatVal="@{viewmodel.repeatVal}"
                tools:text="Weekdays 10:05 AM"/>

            <TextView
                android:id="@+id/auto_snooze_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/snooze_white"
                app:layout_constraintTop_toBottomOf="@id/repeat_text"
                android:paddingHorizontal="14dp"
                android:paddingBottom="10dp"
                android:drawablePadding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"
                app:autoSnooze="@{viewmodel.autoSnoozeVal}"
                android:onClick="@{()->viewmodel.onOpenAutoSnoozeMenu()}"
                tools:text="Every Minute"/>

            <include
                android:id="@+id/time_buttons"
                layout="@layout/time_buttons"
                app:layout_constraintTop_toBottomOf="@id/auto_snooze_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableStart="@drawable/delete_white"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="15dp"
                android:paddingHorizontal="15dp"
                app:layout_constraintEnd_toStartOf="@+id/add"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:drawablePadding="10dp"
                app:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/delete"
                android:onClick="@{()->viewmodel.onDeleteReminder()}"/>

            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableStart="@drawable/check_white"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="15dp"
                android:paddingHorizontal="15dp"
                android:drawablePadding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/confirm"
                android:onClick="@{()->viewmodel.onUpdateReminder()}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>

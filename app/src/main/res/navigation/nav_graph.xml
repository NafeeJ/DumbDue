<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/reminders_fragment_dest">

    <fragment
        android:id="@+id/reminders_fragment_dest"
        android:name="com.kiwicorp.dumbdue.ui.reminders.RemindersFragment"
        android:label="Reminders"
        tools:layout="@layout/fragment_reminders" >
        <action
            android:id="@+id/action_reminders_fragment_dest_to_nav_graph_add"
            app:destination="@id/nav_graph_add" />
        <action
            android:id="@+id/action_reminders_fragment_dest_to_nav_graph_edit"
            app:destination="@id/nav_graph_edit" />
        <argument
            android:name="request"
            app:argType="integer"
            android:defaultValue="0"/>
        <argument
            android:name="reminderId"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_reminders_fragment_dest_to_settings_fragment_dest"
            app:destination="@id/settings_fragment_dest" />
    </fragment>
    <fragment
        android:id="@+id/settings_fragment_dest"
        android:name="com.kiwicorp.dumbdue.ui.settings.SettingsFragment"
        android:label="Settings" >
        <action
            android:id="@+id/action_settings_fragment_dest_to_editTimeSetButtonsFragment"
            app:destination="@id/editTimeSetButtonsFragment" />
    </fragment>
    <navigation
        android:id="@+id/nav_graph_add"
        app:startDestination="@id/add_reminder_fragment_dest" >

        <dialog
            android:id="@+id/add_reminder_fragment_dest"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.AddReminderFragment"
            android:label="AddReminderFragment"
            tools:layout="@layout/fragment_add_reminder">
            <action
                android:id="@+id/action_addReminderFragment_to_chooseRepeatFragment"
                app:destination="@id/choose_repeat_fragment_dest" />
            <action
                android:id="@+id/action_addReminderFragment_to_chooseAutoSnoozeFragment"
                app:destination="@id/choose_autosnooze_fragment_dest" />
            <action
                android:id="@+id/action_addReminderFragment_to_timePickerFragment"
                app:destination="@id/time_picker_fragment_dest" />
            <action
                android:id="@+id/action_add_reminder_fragment_dest_to_customRepeatFragment"
                app:destination="@id/customRepeatFragment" />
        </dialog>

        <dialog
            android:id="@+id/choose_repeat_fragment_dest"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.ChooseRepeatFragment"
            android:label="ChooseRepeatFragment"
            tools:layout="@layout/fragment_choose_repeat">
            <argument
                android:name="graphId"
                app:argType="integer" />
            <action
                android:id="@+id/action_choose_repeat_fragment_dest_to_customRepeatFragment"
                app:destination="@id/customRepeatFragment" />
        </dialog>

        <dialog
            android:id="@+id/choose_autosnooze_fragment_dest"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.ChooseAutoSnoozeFragment"
            android:label="ChooseAutoSnoozeFragment"
            tools:layout="@layout/fragment_choose_auto_snooze">
            <argument
                android:name="graphId"
                app:argType="integer" />
        </dialog>
        <dialog
            android:id="@+id/time_picker_fragment_dest"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.TimePickerFragment"
            android:label="TimePickerFragment"
            tools:layout="@layout/fragment_time_picker">
            <argument
                android:name="graphId"
                app:argType="integer" />
        </dialog>
        <dialog
            android:id="@+id/customRepeatFragment"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.customrepeat.ChooseCustomRepeatFragment"
            android:label="CustomRepeatFragment" >
            <argument
                android:name="graphId"
                app:argType="integer" />
            <action
                android:id="@+id/action_customRepeatFragment_to_chooseDailyStartDateFragment"
                app:destination="@id/chooseDailyStartDateFragment" />
            <action
                android:id="@+id/action_customRepeatFragment_to_chooseWeeklyStartDateFragment"
                app:destination="@id/chooseWeeklyStartDateFragment" />
        </dialog>
        <dialog
            android:id="@+id/chooseDailyStartDateFragment"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.customrepeat.ChooseDailyStartDateFragment"
            android:label="ChooseDailyStartDateFragment">
            <argument
                android:name="graphId"
                app:argType="integer" />
        </dialog>
        <dialog
            android:id="@+id/chooseWeeklyStartDateFragment"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.customrepeat.ChooseWeeklyStartDateFragment"
            android:label="ChooseWeeklyStartDateFragment" >
            <argument
                android:name="graphId"
                app:argType="integer" />
        </dialog>
    </navigation>
    <navigation
        android:id="@+id/nav_graph_edit"
        app:startDestination="@id/edit_reminder_fragment_dest">
        <argument
            android:name="reminderId"
            app:argType="string" />
        <fragment
            android:id="@+id/edit_reminder_fragment_dest"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.EditReminderFragment"
            android:label="Edit Reminder"
            tools:layout="@layout/fragment_edit_reminder">
            <action
                android:id="@+id/action_editReminderFragment_to_chooseRepeatFragment"
                app:destination="@id/choose_repeat_fragment_dest" />
            <action
                android:id="@+id/action_editReminderFragment_to_chooseAutoSnoozeFragment"
                app:destination="@id/choose_autosnooze_fragment_dest" />
            <argument
                android:name="reminderId"
                app:argType="string" />
            <action
                android:id="@+id/action_editReminderFragment_to_timePickerFragment"
                app:destination="@id/time_picker_fragment_dest" />
        </fragment>

        <dialog
            android:id="@+id/choose_repeat_fragment_dest"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.ChooseRepeatFragment"
            android:label="ChooseRepeatFragment"
            tools:layout="@layout/fragment_choose_repeat">
            <argument
                android:name="graphId"
                app:argType="integer"/>
            <action
                android:id="@+id/action_choose_repeat_fragment_dest_to_customRepeatFragment"
                app:destination="@id/customRepeatFragment" />
        </dialog>

        <dialog
            android:id="@+id/choose_autosnooze_fragment_dest"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.ChooseAutoSnoozeFragment"
            android:label="ChooseAutoSnoozeFragment"
            tools:layout="@layout/fragment_choose_auto_snooze">
            <argument
                android:name="graphId"
                app:argType="integer"/>
        </dialog>
        <dialog
            android:id="@+id/time_picker_fragment_dest"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.TimePickerFragment"
            android:label="TimePickerFragment"
            tools:layout="@layout/fragment_time_picker">
            <argument
                android:name="graphId"
                app:argType="integer" />
        </dialog>
        <dialog
            android:id="@+id/customRepeatFragment"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.customrepeat.ChooseCustomRepeatFragment"
            android:label="CustomRepeatFragment" >
            <argument
                android:name="graphId"
                app:argType="integer" />
            <action
                android:id="@+id/action_customRepeatFragment_to_chooseDailyStartDateFragment"
                app:destination="@id/chooseDailyStartDateFragment" />
            <action
                android:id="@+id/action_customRepeatFragment_to_chooseWeeklyStartDateFragment"
                app:destination="@id/chooseWeeklyStartDateFragment" />
        </dialog>
        <dialog
            android:id="@+id/chooseDailyStartDateFragment"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.customrepeat.ChooseDailyStartDateFragment"
            android:label="ChooseDailyStartDateFragment">
            <argument
                android:name="graphId"
                app:argType="integer" />
        </dialog>

        <dialog
            android:id="@+id/chooseWeeklyStartDateFragment"
            android:name="com.kiwicorp.dumbdue.ui.addeditreminder.customrepeat.ChooseWeeklyStartDateFragment"
            android:label="ChooseWeeklyStartDateFragment" >
            <argument
                android:name="graphId"
                app:argType="integer" />
        </dialog>
        <action
            android:id="@+id/action_global_reminders_fragment_dest"
            app:destination="@id/reminders_fragment_dest" />
    </navigation>
    <fragment
        android:id="@+id/editTimeSetButtonsFragment"
        android:name="com.kiwicorp.dumbdue.ui.settings.edittimesetbuttons.EditTimeSetButtonsFragment"
        android:label="Edit Time Setter Buttons"
        tools:layout="@layout/fragment_edit_time_set_buttons" >
        <action
            android:id="@+id/action_editTimeSetButtonsFragment_to_editIncrementalTimeSetter"
            app:destination="@id/editIncrementalTimeSetter" />
        <action
            android:id="@+id/action_editTimeSetButtonsFragment_to_editQuickAccessTimeSetterFragment"
            app:destination="@id/editQuickAccessTimeSetterFragment" />
    </fragment>
    <fragment
        android:id="@+id/editIncrementalTimeSetter"
        android:name="com.kiwicorp.dumbdue.ui.settings.edittimesetbuttons.editincrementaltimesetter.EditIncrementalTimeSetterFragment"
        android:label="Edit Incremental Time Setter" >
        <argument
            android:name="key"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/editQuickAccessTimeSetterFragment"
        android:name="com.kiwicorp.dumbdue.ui.settings.edittimesetbuttons.editquickaccesstimesetter.EditQuickAccessTimeSetterFragment"
        android:label="Edit Quick Access Time Setter"
        tools:layout="@layout/fragment_edit_quick_access_time_setter" >
        <argument
            android:name="key"
            app:argType="string" />
    </fragment>

</navigation>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/reminders_fragment_dest">

    <fragment
        android:id="@+id/reminders_fragment_dest"
        android:name="com.kiwicorp.dumbdue.ui.reminders.RemindersFragment"
        android:label="Reminders"
        tools:layout="@layout/fragment_reminders" >
        <action
            android:id="@+id/action_remindersFragment_to_addReminderFragment"
            app:destination="@id/add_reminder_fragment_dest" />
        <action
            android:id="@+id/action_remindersFragment_to_editReminderFragment"
            app:destination="@id/edit_reminder_fragment_dest" />
    </fragment>
    <fragment
        android:id="@+id/settings_fragment_dest"
        android:name="com.kiwicorp.dumbdue.ui.preferences.SettingsFragment"
        android:label="Settings" />
    <dialog
        android:id="@+id/add_reminder_fragment_dest"
        android:name="com.kiwicorp.dumbdue.ui.addreminder.AddReminderFragment"
        android:label="Add Reminder"
        tools:layout="@layout/fragment_add_reminder">
        <action
            android:id="@+id/action_addReminderFragment_to_chooseRepeatFragment"
            app:destination="@id/choose_repeat_fragment_dest" />
        <action
            android:id="@+id/action_addReminderFragment_to_chooseAutoSnoozeFragment"
            app:destination="@id/choose_auto_snooze_fragment_dest" />
    </dialog>
    <fragment
        android:id="@+id/edit_reminder_fragment_dest"
        android:name="com.kiwicorp.dumbdue.ui.editreminder.EditReminderFragment"
        android:label="Edit Reminder"
        tools:layout="@layout/fragment_edit_reminder" >
        <action
            android:id="@+id/action_editReminderFragment_to_chooseAutoSnoozeFragment"
            app:destination="@id/choose_auto_snooze_fragment_dest" />
        <action
            android:id="@+id/action_editReminderFragment_to_chooseRepeatFragment_dest"
            app:destination="@id/choose_repeat_fragment_dest" />
    </fragment>
    <dialog
        android:id="@+id/choose_repeat_fragment_dest"
        android:name="com.kiwicorp.dumbdue.ui.chooserepeat.ChooseRepeatFragment"
        android:label="Choose Repeat Value"
        tools:layout="@layout/fragment_choose_repeat">
    </dialog>
    <dialog
        android:id="@+id/choose_auto_snooze_fragment_dest"
        android:name="com.kiwicorp.dumbdue.ui.chooseautosnooze.ChooseAutoSnoozeFragment"
        android:label="Choose Auto Snooze"
        tools:layout="@layout/fragment_choose_auto_snooze"/>

</navigation>
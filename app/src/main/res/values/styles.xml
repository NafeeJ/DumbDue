<resources xmlns:tools="http://schemas.android.com/tools" xmlns:ns2="http://schemas.android.com/apk/res-auto">

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.DumbDue.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.DumbDue.BottomSheet.Modal</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.DumbDue.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>
    
    <style name="ThemeOverlay.DumbDue.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.DumbDue.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.DumbDue.Button.TextButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.DumbDue.Button.TextButton</item>
    </style>

    <style name="ThemeOverlay.DumbDue.MaterialTimePicker" parent="">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <!-- Navigation Drawer -->
    <style name="Widget.DumbDue.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.DumbDue.Button.ImageButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.DumbDue.Button.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Widget.DumbDue.Button.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Widget.DumbDue.Button.TimeButton" parent="@style/Widget.DumbDue.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Widget.DumbDue.TextView.Menu" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Widget.DumbDue.Settings.Text" parent="">
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.DumbDue.Settings.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="switchPadding">8dp</item>
        <item name="switchTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="DumbDue.PreferenceThemOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <style name="Widget.DumbDue.NumberPicker" parent="">
        <item name="np_dividerColor">#00000000</item>
        <item name="np_textColor">?attr/colorOnBackground</item>
        <item name="np_selectedTextColor">?attr/colorOnBackground</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="DaysOfWeekChipStyle">
        <item name="android:checkable">true</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textAlignment">center</item>
        <item name="chipBackgroundColor">@color/bg_chip_state_list</item>
    </style>

</resources>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.DumbDue.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.DumbDue.BottomSheet.Modal</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.DumbDue.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!-- Navigation Drawer -->
    <style name="Widget.DumbDue.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.DumbDue.Button.ImageButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.DumbDue.Button.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Widget.DumbDue.Button.TimeButton" parent="@style/Widget.DumbDue.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Widget.DumbDue.TextView.Menu" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="DumbDue.PreferenceThemOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_preferences</item>
    </style>

    <style name="Widget.DumbDue.NumberPicker" parent="">
        <item name="np_dividerColor">#00000000</item>
        <item name="np_textColor">?attr/colorOnBackground</item>
        <item name="np_selectedTextColor">?attr/colorOnBackground</item>
    </style>

    <style name="DaysOfWeekChipStyle">
        <item name="android:checkable">true</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textAlignment">center</item>
        <item name="chipBackgroundColor">@color/mtrl_choice_chip_background_color</item>
    </style>

</resources>
